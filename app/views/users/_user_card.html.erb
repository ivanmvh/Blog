  <div class="user_card">
    <div><%= image_tag user.photo, class: "user_picture" %></div>
    <div class="user_name border">
      <h2>Id:<%= user.id %>-<%= user.name%></h2>
      <p class="counters">
        <button><%= link_to "Add a post", new_post_path(user_id: user.id) %></button>
        Number of posts: <%= user.posts_counter %>
      </p>
    </div>
  </div>
